<div class="container">
	<div class="row">
		<div class="panel panel-danger">
		  <div class="panel-heading">		
			<h2 class="panel-title">맛집 정보 보기</h2>
			<p><%= flash[:alert] %></p>
		  </div>
		  <div class="row panel-body">
				<div class="col-md-6"><img src="/assets/logo.png" alt="..." class="img-rounded"></div>
				<div class="col-md-6">
					<p>분류: <%= @post.category %></p>
					<h4>제목: <%= @post.title %></h4>
					<p>글쓴이: <%= @post.user.username %></p>
					<p>내용: <%= @post.content %></p>
					<p><a href="/foods/edit/<%= @post.id %>">편집</a>  <a href="/foods/destroy/<%= @post.id %>">삭제</a> <a href="/<%= @post.category %>">목록</a></p>
				</div>
				<hr>
			</div>
			</div>
		  </div>
		</div>
		<div class="row">
			<% @post.comments.each do |comment| %>
			<p class="text-center"><%= comment.content %> <a href="/foods/destroy_comment/<%= comment.id %>">삭제</a></p>
			<% end %>
			<form class="form-horizontal"action="/foods/create_comment" method="post">
				<div class="form-group">
					<label for="inputEmail3" class="col-sm-2 control-label">댓글 : </label>
				    <div class="col-sm-8">
				      <input type="text" class="form-control" name="comment_content" id="inputEmail3" placeholder="내용을 입력하세요">
				    </div>
				    <div class="col-sm-2"><input class="btn btn-lg btn-primary btn-block"type="submit" value="달기"></div>
				    <input type="hidden" name="post_id" value="<%= @post.id %>">
				</div>
			</form>
		</div>
	</div>
</div>



